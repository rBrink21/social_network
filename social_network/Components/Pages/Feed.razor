@page "/Feed"
@using social_network.Data
@using social_network.Model
@inject UserService userService;
@inject SessionService session;
@inject PostService postService;
@inject NavigationManager nav;
@using social_network.Components.Reusable
<nav class="navbar navbar-expand bg-body-tertiary w-100">
    <div class="container-fluid">
        <a class="navbar-brand text-primary-emphasis" href="#">
            <i class="bi bi-book me-2"></i> The Face Book
        </a>
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
         <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <NavLink class="nav-link active" aria-current="page" href="/Feed" Match="NavLinkMatch.All"><i class="bi bi-house-fill"></i> Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/Friends" Match="NavLinkMatch.All"><i class="bi bi-people"></i> Friends</NavLink>
                </li>
                <li class="nav-item">
                  <NavLink class="nav-link" href="/Profile" Match="NavLinkMatch.All"> <i class="bi bi-person-fill"></i> Profile</NavLink>
                </li>
              </ul>
            </div>
    </div>
</nav>

<div class="container-fluid bg-secondary bg-opacity-25 mt-3 w-75 rounded-1 float-start">
    
    <header>
        <button class="btn btn-primary mt-2 float-end">Post</button>
        <div class="">
            <h2 class="text-secondary-emphasis mt-2">Content for you!</h2>
            <h5 class="text-secondary">Posts from your friends</h5>
        </div>
    </header>
    <div>
        <ul class="list-group-flush ps-0">
            @foreach (PostData post in postService.GetAllPosts())
            {
                <Post post="@post"></Post>
            }
        </ul>
    </div>
</div>

@code {
    bool postMenuOpen = false;
    
    string loggedInUser;
    protected override void OnInitialized()
    {
        loggedInUser = session.loggedInUser;
        if (loggedInUser == null)
        {
            nav.NavigateTo("/");
        }
    }

}